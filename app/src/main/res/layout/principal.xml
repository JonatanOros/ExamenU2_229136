<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDetalles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/happybox" />

    <Button
        android:id="@+id/btnDetalles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="21dp"
        android:background="@color/botones"
        android:text="Detalles"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnGlobos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnGlobos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="24dp"
        android:background="@color/botones"
        android:text="Globos"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPeluches"
        app:layout_constraintEnd_toEndOf="@+id/btnDetalles"
        app:layout_constraintStart_toStartOf="@+id/btnDetalles"
        app:layout_constraintTop_toBottomOf="@+id/btnDetalles" />

    <Button
        android:id="@+id/btnPeluches"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:background="@color/botones"
        android:text="Peluches"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegalos"
        app:layout_constraintEnd_toEndOf="@+id/btnRegalos"
        app:layout_constraintStart_toStartOf="@+id/btnRegalos"
        app:layout_constraintTop_toBottomOf="@+id/btnGlobos" />

    <Button
        android:id="@+id/btnRegalos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="26dp"
        android:background="@color/botones"
        android:text="Regalos"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTazas"
        app:layout_constraintEnd_toEndOf="@+id/btnTazas"
        app:layout_constraintStart_toStartOf="@+id/btnTazas"
        app:layout_constraintTop_toBottomOf="@+id/btnPeluches" />

    <Button
        android:id="@+id/btnTazas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="118dp"
        android:background="@color/botones"
        android:text="Tazas"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegalos" />

</androidx.constraintlayout.widget.ConstraintLayout>